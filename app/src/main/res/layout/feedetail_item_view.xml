<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="#fbf8ff">

        <!-- Container for the card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!--                    Month-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="#6B7DB3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/feeMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="October"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fee Type"
                        android:textColor="#6B7DB3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/feeType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Tuition"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

            </LinearLayout>
            <!--                    Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:textColor="#6B7DB3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/feeDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jan 20, 2021"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid Date"
                        android:textColor="#6B7DB3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/feePaidDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jan 25, 2021"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

            </LinearLayout>
            <!--                    Status-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textColor="#6B7DB3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/feeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rs. 5000"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="#6B7DB3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/feeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="UnPaid"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>