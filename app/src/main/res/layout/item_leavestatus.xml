<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/leaveStudentNameRecylcer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Name"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="18sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/leaveStudentClassRecylcer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Class"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/leaveStudentNameRecylcer" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leaveStudentClassRecylcer"/>

</RelativeLayout>
